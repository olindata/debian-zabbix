#!/bin/sh -e
. /usr/share/debconf/confmodule
db_version 2.0 || [ $? -lt 30 ]
	
if [ "$1" = "upgrade" ]; then
    if [ -n "$2" ] && dpkg --compare-versions "$2" lt "1:1.8"; then
      db_fset zabbix-server-mysql/server seen false
      db_input critical zabbix-server-mysql/server
      db_go
    fi
fi

db_stop

#DEBHELPER#

exit 0
