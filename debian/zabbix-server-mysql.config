#!/bin/sh

CONFFILE="/etc/zabbix/zabbix_server.conf"

. /usr/share/debconf/confmodule
db_version 2.0 || [ $? -lt 30 ]

# Autoconfiguration for zabbix-server-mysql
if [ ! -f $CONFFILE ] || [ `md5sum $CONFFILE | awk '{print $1}'` = "d5d8bfb688c0de7051329332c3389495" ]; then

	db_input medium shared/zabbix/database-server || true
	db_go || true

	db_input medium shared/zabbix/database-name || true
	db_go || true

	db_input medium shared/zabbix/database-user || true
	db_go || true
    
	db_input medium shared/zabbix/database-password || true
	db_go || true

fi

#DEBHELPER#

exit 0
