#!/bin/sh -e

case "$1" in
    failed-upgrade|abort-install|abort-upgrade|disappear|upgrade)
    ;;
    remove)
    ;;
    purge)
        rm -fr /var/log/zabbix-agent
        rm -fr /var/run/zabbix-agent

        # remove zabbix user on purge, but only if
        # no server package is installed.
        if [ ! -e /usr/sbin/zabbix_server ]; then
		userdel zabbix || true
		groupdel zabbix || true
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
