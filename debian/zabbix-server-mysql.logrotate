/var/log/zabbix-server/zabbix_server.log {
    daily
    rotate 7
    compress
    missingok
    notifempty
    create 0640 zabbix zabbix
    sharedscripts
    postrotate
       if [ -f /var/run/zabbix-server/zabbix_server.pid ]; then \
         if [ -x /usr/sbin/invoke-rc.d ]; then \
           invoke-rc.d zabbix-server restart > /dev/null; \
         else \
           /etc/init.d/zabbix-server restart > /dev/null; \
         fi; \
       fi;
    endscript
}
